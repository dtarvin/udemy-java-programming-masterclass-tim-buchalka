import java.util.Arrays;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] array = new int[] {5, 6, 7, 8, 9, 10, 11, 12, 13};
		reverse(array);
	}
	
	public static void reverse(int[] array) {
		int temp;
		int rightSide = array.length - 1;
		System.out.println("At start, array is " + Arrays.toString(array));
		for(int i=0; i < (array.length)/2; i++) {
			temp = array[i];
			array[i] = array[rightSide - i];
			array[rightSide - i] = temp;
			System.out.println("Run through loop #" + (i + 1) + 
					": Array is now " + Arrays.toString(array));
		}
		System.out.println("At end, array is now " + Arrays.toString(array));	
		
		// array is {5, 6, 7, 8, 9, 10, 11, 12, 13}
		// first position is array[0]
		// last position is array[length-1]: 8
		// does i >= length-1? 0 >= 8? No
		// temp = array[0]: 5
		// array[0] = array[length-1]: 13
		// array[length-1] = temp: 5
		// array now {13, 6, 7, 8, 9, 10, 11, 12, 5}
		// increment i: 1;
		// first position now array[i]: array[1]
		// last position now array[(length-1)-1]: array[7]
		// is i >= length-1-1? 1 >= 7? No
		// temp = array[i] (1): 6
		// array[i](1) = array[(length-1)-1](7): 12
		// array[7] = temp: 6
		// array now {13, 12, 7, 8, 9, 10, 11, 6, 5}
		// increment i: 2
		// is i>= array[length-1-2]? 2 >= 6? No
		// temp = array[2]: 7
		// array[2] = array[6]: 11
		// array[6] = temp: 7
		// array now {13, 12, 11, 8, 9, 10, 7, 6, 5}
		
	}

}
